</header>
  <section class="container">
      <div id="singleDeProduto" class="mt-3 mb-3 carousel slide " data-interval="0">
          <h2 class="titulo mb-5"><%=filmesSingle[0].titulo%></h2>
            <ul class="carousel-indicators mt-5">
              <li data-target="#singleDeProduto" data-slide-to="0" class="active"></li>
              <li data-target="#singleDeProduto" data-slide-to="1"></li>
            </ul>
            <div class="carousel-inner">
              <div class="carousel-item active">
                  <div class="row">
                    <div class="col-sm-5 text-center mb-5">
                      <img src="../imagens/<%=filmesSingle[0].imagem%>" class="img-thumbnail w-50" />
                    </div>
                    <div class="col-sm-5">
                      <p ><%=filmesSingle[0].sinopse%></p>
                      <p style="color: #f58139; text-shadow: #3b0052 2px 2px;">
                        Pre√ßo: R$ <%=filmesSingle[0].valor.replace(".",",")%>
                      <p>
                      <a href=""data-id="<%=filmesSingle[0].filmes_id%>" data-filme="<%=filmesSingle[0].imagem%>" data-valor="<%=filmesSingle[0].valor%>" class="bt-carrinho ml-4 text-white">
                        <img src="/imagens/play.png" class="button-play"><span class="span-play comprar">ALUGAR</span>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="carousel-item text-center mb-5" >
                  <iframe width="860" height="460" src="<%=filmesSingle[0].trailer%>" title="YouTube video player" style="border:2px solid #e8673f;border-radius: 10px;" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
                </div>
              </div>
              <a class="carousel-control-prev" href="#singleDeProduto" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
              </a>
              <a class="carousel-control-next" href="#singleDeProduto" data-slide="next">
                <span class="carousel-control-next-icon"></span>
              </a>
        </div>
      </section>
<%- include("imagensRodape.ejs")%>
  <script  type="text/javascript">
    $().ready(function(){
      $(".bt-carrinho").click(function(){
        let dataId=$(this).attr("data-id")
        let dataFilme=$(this).attr("data-filme")
        let dataValor=$(this).attr("data-valor")
          $.post("/carrinho",{
            filme: dataId,
            valor: dataValor,
            qtdTelas: 1,
            imagem: dataFilme
          }, function(data,status){
              location.href="/carrinho"
          },"json")
        }) 
      });
    </script> 
